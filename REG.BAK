              WITH StudentBuff DO
                BEGIN
                   gotoxy(3,9);
                   writeln(S_Forname);
                   gotoxy(20,9);
                   writeln(S_Surname);
                END; (* WITH *)
              seek(StudentFile, key);
              read(StudentFile, studentBuff);
              writexy(5,12,'Was the student absent(`n`) or present(y`) on this occasion ?');
              REPEAT
                 gotoxy(15,13);
                 writeln('          ');
                 gotoxy(15,13);
                 readln(attendanceFlag);
